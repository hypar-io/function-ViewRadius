{
  "version": "0.2.0",
  "configurations": [
    {
      "name": ".NET Core Launch (console)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/test/bin/Debug/netcoreapp2.1/ViewRadius.tests.dll",
      "args": [],
      "cwd": "${workspaceFolder}/test",
      "console": "internalConsole",
      "stopAtEntry": false
    },
    {
      "name": ".NET Core Attach",
      "type": "coreclr",
      "request": "attach",
      "processId": "${command:pickProcess}"
    },
    {
      "name": "Attach to Hypar Run",
      "type": "coreclr",
      "request": "attach",
      "processName": "ViewRadius.Server"
    },
    {
      "name": "Launch Hypar Run (Run once only)",
      "type": "coreclr",
      "request": "launch",
      "program": "${workspaceFolder}/server/bin/Debug/net6.0/ViewRadius.Server.dll",
      "args": [
        "--workflow-id",
        "${input:workflowId}"
      ],
      "preLaunchTask": "server-build"
    }
  ],
  "inputs": [
    {
      "id": "workflowId",
      "type": "promptString",
      "description": "Enter the workflow id to run."
    }
  ]
}